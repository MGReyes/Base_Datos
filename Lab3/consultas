--3a) CONSULTA

use db2014_g05;

SET @cant_maq = (select sum(Cantidad)
                from ClienteMaquina
                where Marca = "Consequat Corporatio" 
                and Modelo = "ZT202a");

select Cuil, sum(porcentaje) as porcentaje
from VendedorCliente natural join (
    select Cuit, (Cantidad*100/@cant_maq) as porcentaje
    from ClienteMaquina
    where Marca = "Consequat Corporatio" and Modelo = "ZT202a") 
    as clientes_con_porcentajes
group by Cuil;

--3b) CONSULTA

use db2014_g05;

SET @cant_maq = (select sum(Cantidad)
                from ClienteMaquina
                where Marca = "Consequat Corporatio" 
                and Modelo = "ZT202a");

select NombreZona, sum(porcentaje_ciudad) as porcentaje_zona
from CiudadZona natural join (
    select NombreCiudad, sum(porcentaje) as porcentaje_ciudad
    from Cliente natural join (
        select Cuit, (Cantidad*100/@cant_maq) as porcentaje
        from ClienteMaquina
        where Marca = "Consequat Corporatio" and Modelo = "ZT202a")
        as clientes_con_porcentajes
    group by NombreCiudad)
    as porcentaje_ciudad
group by NombreZona;

-- 4) CONSULTA

use db2014_g05;

select YEAR(Fecha), MONTH(Fecha) as Mes, sum(Pendientes) as pendientes, sum(Realizadas) as realizadas
from (select Fecha, Cuil,
          (case Estado when "pendiente" then 1 else 0 end) as Pendientes,
          (case Estado when "realizada" then 1 else 0 end) as Realizadas
     from Comunicacion
     where Cuil = 38331147320)
     as p_r
group by YEAR(Fecha), MONTH(Fecha);

-- 5) CONSULTA

use db2014_g05;

select Marca,Modelo
from ClienteMaquina natural join Cliente natural join CiudadZona
where NombreZona = "Interior" and (Marca, Modelo) not in (
   select Marca,Modelo
   from ClienteMaquina natural join Cliente natural join CiudadZona
   where NombreZona != "Interior");

-- 6) CONSULTA

use db2014_g05;

SELECT Marca,Modelo
FROM(
   SELECT Marca,Modelo,NombreZona
   FROM ClienteMaquina natural join Cliente natural join CiudadZona) as p
GROUP BY Marca,Modelo
HAVING COUNT(*) = (
   SELECT COUNT(*)
   FROM Zona);

-- 7) CONSULTA

use db2014_g05;

select NombreZona, sum(cantidad) as cantidad
from CiudadZona natural join (
    select NombreCiudad, CP_Ciudad, count(*) as cantidad
    from Cliente
    group by NombreCiudad, CP_Ciudad)
    as cant_clientes_por_ciudad
group by NombreZona;

--7) OTRA FORMA

SELECT NombreZona, count(*) AS Cantidad_Clientes
FROM
(SELECT *
FROM CiudadZona
WHERE NombreZona = 'Pampa') AS Ciudades_de_Zona
NATURAL JOIN Cliente
GROUP BY NombreZona;


--8) CONSULTA

SELECT NombreCiudad, CP_Ciudad, sum(Cantidad) AS Cantidad_Maquinas
FROM Cliente NATURAL JOIN ClienteMaquina
GROUP BY NombreCiudad
ORDER BY NombreCiudad, Cantidad_Maquinas desc;


--10) CONSULTA

SELECT *
FROM Cliente
WHERE
    Cuit not in
    (SELECT Cuit
    FROM ClienteMaquina
    WHERE Marca = 'A Incorporated' and Modelo = 'JA689p')
    AND
    Cuit in
    (SELECT Cuit
    FROM AreaCliente
    WHERE Nombre_Area = 'Agricultura');




--11) CONSULTA

SELECT *
FROM
    (SELECT Cuit, sum(Cantidad) AS Cantidad_Maquinas
    FROM Comunicacion NATURAL JOIN ClienteMaquina
    GROUP BY Cuit
    ORDER BY count(Numero)) AS TablaAux NATURAL JOIN Cliente;
